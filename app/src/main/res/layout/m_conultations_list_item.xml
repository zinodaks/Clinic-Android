<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/c_date_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/display_date_border">

        <TextView
            android:id="@+id/c_month"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Nov."
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/c_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/month"
            android:text="17"
            android:textColor="@color/colorAccent"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/c_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/day"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:text="2019" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kk"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/c_date_display"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/c_medicine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="Panadol" />

        <TextView
            android:id="@+id/mc_instructions"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Once per day" />
    </LinearLayout>




</RelativeLayout>